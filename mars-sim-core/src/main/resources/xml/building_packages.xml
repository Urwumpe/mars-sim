<?xml version = "1.0" encoding = "UTF-8" standalone = "yes" ?>
<!DOCTYPE building-package-list [
	<!ELEMENT building-package-list (building-package*)>
	<!ELEMENT building-package (standalone*)>
	<!ATTLIST building-package name CDATA #REQUIRED>
	<!ELEMENT standalone EMPTY>
	<!ATTLIST standalone type CDATA #REQUIRED>
	<!ATTLIST standalone xloc CDATA #REQUIRED>
	<!ATTLIST standalone yloc CDATA #REQUIRED>
	<!ATTLIST standalone facing CDATA #REQUIRED>
]>

<!-- List of all building packages in the simulation. -->
<!-- Building packages are used for settlement initial standalone buildings -->
<!-- Used by settlement templates -->
<building-package-list>

	<!-- Building package -->
	<!-- name: the unique name of the package. -->
	<building-package name="Storage Bin Set 1" >

		<!-- Buildings -->
		<!-- type: the type of building (see buildings.xml) -->
		
		<!-- Next to ERV-A -->
		<standalone type="Ice Storage" xloc="30.0" yloc="15.0"
	        facing="90.0" />
   	    <standalone type="Carbon Storage" xloc="25.0" yloc="15.0"
	        facing="90.0" />    
   	    <standalone type="Fuel Storage" xloc="20.0" yloc="15.0"
	        facing="90.0" />  
	        	      
	    <!-- Next to ERV-B -->    
	    <standalone type="Regolith Storage" xloc="20.0" yloc="30.0"
	        facing="90.0" />
	    <standalone type="Sand Storage" xloc="25.0" yloc="30.0"
	        facing="90.0" />
	    <standalone type="Metal Storage" xloc="30.0" yloc="30.0"
	        facing="90.0" />	        
	        
	    <!-- Next to ERV-C -->     
	    <standalone type="Concrete Storage" xloc="20.0" yloc="45.0" 
	        facing="90.0" />
	    <standalone type="Cement Storage" xloc="25.0" yloc="45.0"
	        facing="90.0" />
	    <standalone type="Lime Storage" xloc="30.0" yloc="45.0"
	        facing="90.0" />

	</building-package>

	<building-package name="ERV Set 1" >

	    <standalone type="ERV-A" xloc="12.0" yloc="15.0" facing="0.0" />
	    <standalone type="ERV-B" xloc="12.0" yloc="30.0" facing="0.0" />
	    <standalone type="ERV-C" xloc="12.0" yloc="45.0" facing="0.0" />
	    
	</building-package>

</building-package-list>