<?xml version = "1.0" encoding = "UTF-8" standalone = "yes" ?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="settlement.xsd"
        name="Phase 6-US" default-population="48" description="Phase 6 base for NASA"
		number-of-robots="24" sponsor="NASA">

    <!-- Lander habitat building is the main habitation in the Mars Direct
        mission plan. -->
    <building id="0" type="Lander Hab" xloc="0.0" yloc="0.0" facing="0.0">
        <!-- List of all connections to other buildings (optional). -->
        <connection-list>
            <!-- Connection to another building. "id" is other building's ID. -->
            <!-- X & Y locations are relative to this building, not in the settlement
                locale. -->
            <connection id="1" xloc="4.5" yloc="0.0" />
            <connection id="15" xloc="-4.5" yloc="0.0" />
        </connection-list>
    </building>

    <!-- EVA Airlock is attached to the lander hab -->
    <building id="1" type="EVA Airlock" xloc="7.5" yloc="0.0" facing="0.0">
        <connection-list>
            <connection id="0" xloc="-3.0" yloc="0.0" />
        </connection-list>
    </building>

    <!-- 4 Life Core A are attached to one another in a column -->
    <building id="14" type="life Core A" xloc="-7.5" yloc="-6.0" facing="0.0">
        <connection-list>
            <connection id="15" xloc="0.0" yloc="3.0" />
        </connection-list>
    </building>
    
    <building id="15" type="life Core A" xloc="-7.5" yloc="0.0" facing="0.0">
        <connection-list>
            <connection id="0" xloc="3.0" yloc="0.0" />
            <connection id="2" xloc="-3.0" yloc="0.0" />
            <connection id="16" xloc="0.0" yloc="3.0" />
            <connection id="14" xloc="0.0" yloc="-3.0" />
        </connection-list>
    </building>
    
    <building id="16" type="life Core A" xloc="-7.5" yloc="6.0" facing="0.0">
        <connection-list>
            <connection id="9" xloc="-3.0" yloc="0.0" />
            <connection id="17" xloc="0.0" yloc="3.0" />
            <connection id="15" xloc="0.0" yloc="-3.0" />
        </connection-list>
    </building>

    <building id="17" type="life Core A" xloc="-7.5" yloc="12.0" facing="0.0">
        <connection-list>
            <connection id="10" xloc="-3.0" yloc="0.0" />
            <connection id="16" xloc="0.0" yloc="-3.0" />
        </connection-list>
    </building>
        
    
	<!-- Row 0 -->
    <building id="2" type="Fish Farm" xloc="-15.0" yloc="0.0" facing="90.0">
        <connection-list>
            <connection id="15" xloc="0.0" yloc="-4.5" />
            <connection id="3" xloc="0.0" yloc="4.5" />
            <connection id="9" xloc="3.0" yloc="0.0" />
        </connection-list>
    </building>

    <building id="3" type="Fish Farm" xloc="-24.0" yloc="0.0" facing="90.0">
        <connection-list>
            <connection id="2" xloc="0.0" yloc="-4.5" />
            <connection id="4" xloc="0.0" yloc="4.5" />
            <connection id="8" xloc="3.0" yloc="0.0" />
        </connection-list>
    </building>
    
    <building id="4" type="Algae Pond" xloc="-33.0" yloc="0.0" facing="90.0">
        <connection-list>
            <connection id="3" xloc="0.0" yloc="-4.5" />
            <connection id="5" xloc="0.0" yloc="4.5" />
            <connection id="7" xloc="3.0" yloc="0.0" />
        </connection-list>
    </building>
    
    <building id="5" type="Algae Pond" xloc="-42.0" yloc="0.0" facing="90.0">
        <connection-list>
            <connection id="4" xloc="0.0" yloc="-4.5" />
            <connection id="6" xloc="3.0" yloc="0.0" />
        </connection-list>
    </building>

	<!-- Row 1 -->
    <building id="6" type="Inflatable Greenhouse" xloc="-42.0" yloc="6.0" facing="90.0">
        <connection-list>
            <connection id="7" xloc="0.0" yloc="-4.5" />
            <connection id="5" xloc="-3.0" yloc="0.0" />
        </connection-list>
    </building>

    <building id="7" type="Inflatable Greenhouse" xloc="-33.0" yloc="6.0" facing="90.0">
        <connection-list>
            <connection id="8" xloc="0.0" yloc="-4.5" />
            <connection id="6" xloc="0.0" yloc="4.5" />
            <connection id="4" xloc="-3.0" yloc="0.0" />
        </connection-list>
    </building>
    
    <building id="8" type="Inflatable Greenhouse" xloc="-24.0" yloc="6.0" facing="90.0">
        <connection-list>
            <connection id="9" xloc="0.0" yloc="-4.5" />
            <connection id="7" xloc="0.0" yloc="4.5" />
            <connection id="3" xloc="-3.0" yloc="0.0" />
        </connection-list>
    </building>
    
    <building id="9" type="Inflatable Greenhouse" xloc="-15.0" yloc="6.0" facing="90.0">
        <connection-list>
            <connection id="16" xloc="0.0" yloc="-4.5" />
            <connection id="8" xloc="0.0" yloc="4.5" />
            <connection id="2" xloc="-3.0" yloc="0.0" />
        </connection-list>
    </building>

	<!-- Row 2 -->
    <building id="10" type="Compact Quarters" xloc="-15.0" yloc="12.0" facing="90.0">
        <connection-list>
            <connection id="11" xloc="0.0" yloc="4.5" />
            <connection id="17" xloc="0.0" yloc="-4.5" />
        </connection-list>
    </building>
    
    <building id="11" type="Compact Quarters" xloc="-24.0" yloc="12.0" facing="90.0">
        <connection-list>
            <connection id="12" xloc="0.0" yloc="4.5" />
            <connection id="10" xloc="0.0" yloc="-4.5" />
        </connection-list>
    </building>
    
    <building id="12" type="Compact Quarters" xloc="-33.0" yloc="12.0" facing="90.0">
        <connection-list>
            <connection id="13" xloc="0.0" yloc="4.5" />
            <connection id="11" xloc="0.0" yloc="-4.5" />
        </connection-list>
    </building>
    
    <building id="13" type="Compact Quarters" xloc="-42.0" yloc="12.0" facing="90.0">
        <connection-list>
            <connection id="12" xloc="0.0" yloc="-4.5" />
        </connection-list>
    </building>        


    <!-- Building Packages -->
    <building-package name="Storage Set 1"/>
   	<building-package name="ERV Set 1"/>
    <building-package name="Sabatier Set 1 - 1x1"/>
   	<building-package name="Nuclear Set 1 - Combo 0"/>
    <building-package name="Solar Set 1 - 1x6"/>
   		
    <!-- A rover for collecting rock samples from remote sites and ice prospecting. -->
    <vehicle type="Explorer Rover" number="2" />
    <vehicle type="Light Utility Vehicle" number="1" />
    <vehicle type="Delivery Drone" number="1" />

    <!-- Equipment -->
    <equipment type="EVA Suit" number="8" />
    
    <!-- Containers-->
	<equipment type="barrel" number="40" />
	<equipment type="bag" number="40" />
	<equipment type="gas canister" number="40" />		
	<equipment type="large bag" number="40" />
	<equipment type="specimen box" number="40" />
    <equipment type="thermal bottle" number="8" />	
 	<equipment type="wheelbarrow" number="12" />

    <!-- Bins -->
	<bin type="pot" number="20" />
	<bin type="crate" number="20" />
	<bin type="basket" number="20" />

    <!-- Resources -->
    <!-- type: the type of resource (see resources.txt) -->
    <!-- amount: the amount of the resource (kg) -->

    <!-- Mars Direct Mission Plan : 
    (1). ERV - 
    	(a). Payload imported from Earth - 
    		 Consumables - Hydrogen : 3400 kg  
    		 Feedstock - Hydrogen : 6300 kg 
        (b). Produced on Mars : 
        	 Water : 18900 kg 
        	 Oxygen : 16080 kg 
        	 Methane : 8400 kg 
    (2). Hab -
        (a). Payload imported from Earth - 
             Consumables - Hydrogen : 7000 kg 
    -->

    <!-- Life Support Resources -->
	<resource type="food" amount="720" />
	<resource type="water" amount="3600" />
	<resource type="oxygen" amount="1440" />
	

    <!-- Crop -->
    <!-- No starting crops for this template -->

    <!-- Part packages (see part_packages.xml) -->
    <!-- name: the part package name. -->
    <!-- number: the number of packages. -->
    <part-package name="package 1" number="1" />

    <!-- The resupply missions from Earth scheduled for this type of settlement. -->
    <resupply>
        <resupply-mission name="Food Delivery" manifest-name="Food Resupply 1">
            <schedule firstSol="2" frequency="80" /> 
        </resupply-mission>
        <resupply-mission name="Phase 1 Delivery" manifest-name="Resupply for Phase 1">
            <schedule firstSol="668"/>
        </resupply-mission>
    </resupply>
</template>