    <div id="groups">
    <p>Grouped by {{groupname}}.</p>
    {{#groups}}
      <a style="display: inline;" href="#{{id}}">{{name}}</a>
    {{/groups}}
    </div>
    {{#groups}}
      <h3 id="{{id}}">{{name}}</h3>
      {{#description}}
